<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item android:right="15dp" android:left="15dp" android:top="15dp" android:bottom="15dp">
        <shape android:shape="rectangle">
            <!-- Darker color for a more visible shadow (semi-transparent black) -->
            <solid android:color="#000000" /> <!-- 70% opaque black -->
            <corners android:radius="@dimen/_25sdp" />
        </shape>
    </item>

    <!-- Main Background Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Replace with your desired background color -->
            <corners android:radius="@dimen/_5sdp" />
            <stroke
                android:width="1dp"
                android:color="#5C5B5B" />
<!-- Match the radius for consistency -->
        </shape>
    </item>

</layer-list>
